\newenvironment{chapter}[3][]{% Args: image (optional), color, frame title
  \begingroup
  % \themecolor{blue}
  \themecolor{dark}
  \setbeamertemplate{footline}{}
  \ifstrequal{#2}{sinteflightgreen}{ % Use blue text on light green, else white
